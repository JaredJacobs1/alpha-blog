<style> 
  p, textarea, input {
    font-size: 18px; 
    font-family: arial; 
  }   
  label {
    font-size: 14px; 
    font-family: arial;
    font-weight: bold; 
} 
</style>

<h1>Edit an Existing Article</h1>

<% if @article.errors.any? %> 
  <h2>The following errors prevented the article from being saved</h2> 
  <ul> 
    <% @article.errors.full_messages.each do |msg| %> 
      <li><b><%= msg %></b></li> 
    <% end %> 
  </ul>
  <br/>
<% end %>

<!--
 Note the change, here, between edit.html.erb and show.html.erb. This use of
 form_with() knows to take the @article.title value and apply it to the :title
 field, below. And, in the same manner, apply the @article.description to the 
 :description field. Now the user can arrive at the form with the editable
 fields filled in.
 -->

<%= form_with( model: @article, local: true ) do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<p style="font-color:red; font-family:Trebuchet MS;font-size:16px;">
  <%= link_to 'Cancel this Edit and List all Articles', articles_path %>
</p>