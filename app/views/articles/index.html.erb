<style> table, h1 { font-family: arial; } </style>
<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>  
      <th>Description</th>
      <th colspan='3'>Actions</th>
    </tr>
  </thead>

  <style>
    .tdLink {
      text-decoration: none; 
      font-color:red; 
      font-family:Trebuchet MS;
      font-size:13px;
    } 
    td, th{
      padding: 0 30px 0 0;
      text-align: left;
    }
  </style>
  <tbody>
    <% @arts.each do |art| %>
      <tr>
        <td><%= art.title %></td>
        <td><%= art.description %></td>
        <td class='tdLink'><%= link_to 'Show', article_path(art) %></td>
        <td class='tdLink'><%= link_to 'Edit', edit_article_path(art) %></td>
        <td class='tdLink'><%= link_to 'Delete', article_path(art), method: :Delete, data: { confirm: "Delete this article?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p style="font-color:red; font-family:Trebuchet MS;font-size:16px;">
  <%= link_to 'Create a New Article', new_article_path %><br/>
  <style>
    img {
      width: 30px;
      margin-top: 10px;
    }
  </style>
  <%= link_to root_path do %>
    <%= image_tag('homeIcon.png') %>
  <% end %>
</p>